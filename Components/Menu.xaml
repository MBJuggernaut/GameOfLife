<UserControl x:Class="GameOfLife.Components.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOfLife.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Menu x:Name="MainMenu" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="20">
            <MenuItem Header="Начать новую игру" Command="{Binding StartGame}"/>
            <MenuItem Header="Правила"/>
            <MenuItem Header="Настройки"/>
        </Menu>

    </Grid>
</UserControl>
